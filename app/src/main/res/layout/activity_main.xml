<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/contentRoot"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- EDITOR MATHLIVE CON TECLADO NATIVO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Etiqueta del campo activo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tvFieldLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="EDO:"
                        android:textSize="14sp"
                        android:textColor="#1976D2"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnPvi"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="PVI"
                        android:textSize="12sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:minWidth="0dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                </LinearLayout>

                <!-- Editor MathLive (WebView) con teclado virtual integrado -->
                <WebView
                    android:id="@+id/wvMathLive"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#FAFAFA"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Inputs invisibles (solo backing store para valores) -->
        <EditText
            android:id="@+id/etEquation"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0"
            android:cursorVisible="false"
            android:importantForAutofill="no"
            android:hint="EDO"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etX0"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:importantForAutofill="no"
                android:hint="x0"/>

            <EditText
                android:id="@+id/etY0"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:importantForAutofill="no"
                android:hint="y0"/>
        </LinearLayout>

        <!-- BOTONES DE ACCIÃ“N -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnSolve"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="2"
                android:text="Resolver"
                android:textSize="16sp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="8dp"/>

            <Button
                android:id="@+id/btnToggleSteps"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Pasos"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>

        <!-- RESULTADO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <WebView
                android:id="@+id/wvLatexResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>