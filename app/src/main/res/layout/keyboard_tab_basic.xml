<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="6"
    android:useDefaultMargins="false">

    <!-- FILA 0: y' dy/dx x y ( ) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_yprime" style="@style/KeyButtonOp"
        android:layout_row="0" android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="y'"
        android:textSize="13sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_dydx" style="@style/KeyButtonOp"
        android:layout_row="0" android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="dy/dx"
        android:textSize="11sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_x" style="@style/KeyButtonOp"
        android:layout_row="0" android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="x"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_y" style="@style/KeyButtonOp"
        android:layout_row="0" android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="y"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_lpar" style="@style/KeyButtonOp"
        android:layout_row="0" android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="("/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_rpar" style="@style/KeyButtonOp"
        android:layout_row="0" android:layout_column="5"
        android:layout_columnWeight="1"
        android:text=")"/>

    <!-- FILA 1: 7 8 9 + - ⌫ -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_7" style="@style/KeyButtonNum"
        android:layout_row="1" android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="7"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_8" style="@style/KeyButtonNum"
        android:layout_row="1" android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="8"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_9" style="@style/KeyButtonNum"
        android:layout_row="1" android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="9"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_plus" style="@style/KeyButtonOp"
        android:layout_row="1" android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="+"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_minus" style="@style/KeyButtonOp"
        android:layout_row="1" android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="-"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_back" style="@style/KeyButtonOp"
        android:layout_row="1" android:layout_column="5"
        android:layout_columnWeight="1"
        android:text="⌫"/>

    <!-- FILA 2: 4 5 6 × ÷ CLR -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_4" style="@style/KeyButtonNum"
        android:layout_row="2" android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_5" style="@style/KeyButtonNum"
        android:layout_row="2" android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="5"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_6" style="@style/KeyButtonNum"
        android:layout_row="2" android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="6"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_mul" style="@style/KeyButtonOp"
        android:layout_row="2" android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="×"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_div" style="@style/KeyButtonOp"
        android:layout_row="2" android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="÷"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_clear" style="@style/KeyButtonOp"
        android:layout_row="2" android:layout_column="5"
        android:layout_columnWeight="1"
        android:text="CLR"
        android:textSize="11sp"/>

    <!-- FILA 3: 1 2 3 ^ e^x = -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_1" style="@style/KeyButtonNum"
        android:layout_row="3" android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_2" style="@style/KeyButtonNum"
        android:layout_row="3" android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="2"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_3" style="@style/KeyButtonNum"
        android:layout_row="3" android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="3"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_pow" style="@style/KeyButtonOp"
        android:layout_row="3" android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="^"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_exp" style="@style/KeyButtonOp"
        android:layout_row="3" android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="e^x"
        android:textSize="12sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_eq" style="@style/KeyButtonOp"
        android:layout_row="3" android:layout_column="5"
        android:layout_columnWeight="1"
        android:text="="/>

    <!-- FILA 4: 0 . ln sin cos a/b -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_0" style="@style/KeyButtonNum"
        android:layout_row="4" android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="0"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_dot" style="@style/KeyButtonNum"
        android:layout_row="4" android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="."/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_ln" style="@style/KeyButtonOp"
        android:layout_row="4" android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="ln"
        android:textSize="12sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_sin" style="@style/KeyButtonOp"
        android:layout_row="4" android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="sin"
        android:textSize="11sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_cos" style="@style/KeyButtonOp"
        android:layout_row="4" android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="cos"
        android:textSize="11sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/kb_frac" style="@style/KeyButtonOp"
        android:layout_row="4" android:layout_column="5"
        android:layout_columnWeight="1"
        android:text="a/b"
        android:textSize="11sp"/>

</GridLayout>