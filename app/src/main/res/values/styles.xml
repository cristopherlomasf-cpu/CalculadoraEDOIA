<resources>
    <style name="KeyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="KeyButtonBase" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeWidth">1dp</item>
    </style>




    <style name="KeyButtonNum" parent="KeyButtonBase">
        <item name="backgroundTint">@color/key_num_bg</item>
        <item name="android:textColor">@color/key_num_text</item>
    </style>

    <style name="KeyButtonVar" parent="KeyButtonBase">
        <item name="backgroundTint">@color/key_var_bg</item>
        <item name="android:textColor">@color/key_var_text</item>
    </style>

    <style name="KeyButtonOp" parent="KeyButtonBase">
        <item name="backgroundTint">@color/key_op_bg</item>
        <item name="android:textColor">@color/key_op_text</item>
    </style>

</resources>
